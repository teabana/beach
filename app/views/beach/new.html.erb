<div class="beach_register">
  <%= render "header" %>
  <div class="beach_register_main">
    <h2 class="beach_register_title">ビーチ情報を入力</h2>
    <%= form.with model: @beach, url: beachs_path, local: true do |f| %>
    <div class="beach_info_base">
      <div class="beach_info_base_title">
        ビーチの基本情報
      </div>
    <%# ビーチ名 %>
      <div class="form_box name">
        <div class="item_title">
          ビーチ名
        </div>
        <div class="item_input">
          <%= f.text_area :name, class:"items_text", id:"item_name", placeholder: "ビーチ名", maxlength:"40" %>
        </div>
      </div>
      <%# /ビーチ名 %>
      <%# ビーチ画像 %>
      <div class="form_box image">
        <div class="item_title">
          ビーチ写真
        </div>
        <div class="item_input">
          <%= f.file_field :image, id:"item_image" %>
        </div>
      </div>
      <%# /ビーチ画像 %>
      <%# ビーチ説明 %>
      <div class="form_box name">
        <div class="item_title">
          ビーチの説明
        </div>
        <div class="item_input">
          <%= f.text_area :detail, class:"items_text", id:"item_info", placeholder: "ビーチの説明", maxlength:"1000" %>
        </div>
      </div>
      <%# /ビーチ説明 %>
      <%# 地域 %>
      <div class="form_box name">
        <div class="item_title">
          ビーチの場所
        </div>
        <div class="item_input">
          <%= f.collection_(:area_id, Area.all, :id, :name, {}, {class: "select_box", id:"area"} )%>
        </div>
      </div>
      <%# /地域 %>
    </div>
    <div class="beach_info_activity">
      <div class="beach_info_activity_title">
        アクティビティ
      </div>
      <%# アクティビティ %>
      <div class="form_box activity">
        <div class="item_title">
          アクティビティ
        </div>
        <div class="item_input">
          <%= f.collection_check_boxes :activity, Activity.all, :id, :name, {class:"check_box", id:"activity"} %>
        </div>
      </div>
      <%# /アクティビティ %>
    </div>
    <div class="beach_info_facility">
      <div class="beach_info_activity_title">
        設備
      </div>
      <%# 設備 %>
      <div class="form_boxfacility ">
        <div class="item_title">
          設備
        </div>
        <div class="item_input">
          <%= f.collection_check_boxes :activity, Facility.all, :id, :name, {class:"check_box", id:"facility"} %>
        </div>
      </div>
      <%# /設備 %>
    </div>
  </div>
</div>